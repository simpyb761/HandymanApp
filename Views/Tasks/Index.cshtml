@model IEnumerable<Handyman.Models.Tasks>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">How-To</h1>


<div class="row">
    <div class="col-sm-3 th-side-nav mb-2 me-2 rounded">
        <h3 class="pt-2">Categories</h3>
        <p>Home</p>
        <p>Auto</p>
        <p>Lawn</p>

        <p class="">
            @if (User.IsInRole("Admin")) {
                <a asp-action="Create">Create New</a>}
        </p>
    </div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="searchString" value="@ViewData["currentFilter"]" style="width:30%;"/>
            <input type="submit" value="Search" class="th-btn " style="max-width:20%"/>
        </p>
    </div>
</form>
<div class="row">
    
    <div class="col-sm-3 th-side-nav mb-2 me-2 rounded">
        <form asp-action="Index" method="get">
        
            <h3 class="pt-2">Categories</h3>
            <input type="submit" name="filterCategory" value="Home" class="mt-2 th-btn"/><br/>
            <input type="submit" name="filterCategory" value="Auto" class="mt-2 th-btn" /><br />
            <input type="submit" name="filterCategory" value="Lawn" class="mt-2 th-btn" />
            <p class="py-2">
                <a asp-action="Create" class="text-black">Create New How-To</a>
            </p>
        </form>
    </div>

    <div class="th-section col-md-8 overflow-hidden rounded">
        <table class="table">
            <thead>
                <tr>
                    <th>

                        @Html.DisplayNameFor(model => model.TaskName)
                    </th>
                    @* <th>
                        @Html.DisplayNameFor(model => model.Tools)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Steps)
                    </th> *@
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>

                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]" class="text-black">Task Name</a>
                    </th>

                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CatSortParam"]" class="text-black">Category</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SkillSortParam"]" class="text-black">Skill Level</a>

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>

                    @* <th>
                        @Html.DisplayNameFor(model => model.VideoLink)
                    </th> *@
                    <th>
                        @Html.DisplayNameFor(model => model.EstimatedPrice)


                    <th>
                        Estimated Price

                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskName)
                    </td>

                    @* <td>
                        @Html.DisplayFor(modelItem => item.Tools)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Steps)
                    </td> *@



                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SkillLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)

                    @* <td>
                        @Html.DisplayFor(modelItem => item.VideoLink)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.EstimatedPrice)
                    </td>
                        <td>
                            @if (User.IsInRole("Admin")) {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            }
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>


                    <td>
                        @Html.DisplayFor(modelItem => item.EstimatedPrice)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>

</div>

