@model IEnumerable<Handyman.Models.Tasks>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">How-To</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="searchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
    </div>
</form>
<div class="row">
    
    <div class="col-sm-3 th-side-nav mb-2 me-2 rounded">
        <form asp-action="Index" method="get">
        
            <h3 class="pt-2">Categories</h3>
            <input type="submit" name="filterCategory" value="Home" class="mt-2"/><br/>
            <input type="submit" name="filterCategory" value="Auto" class="mt-2" /><br />
            <input type="submit" name="filterCategory" value="Lawn" class="mt-2" />
            <p class="">
                <a asp-action="Create">Create New</a>
            </p>
        </form>
    </div>
    <div class="th-section col-md-8 overflow-hidden rounded">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Task Name</a>
                    </th>

                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CatSortParam"]">Category</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SkillSortParam"]">Skill Level</a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.EstimatedPrice)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SkillLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstimatedPrice)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>