@{
    ViewData["Title"] = "Home Page";
}

<body>
    <header>
        <div class="th-section text-center">
            <div class="row ">
                <h4>Set a desired location below if our geolocation provides unwanted results</h4>
                <form asp-action="Location">


                    <input name="Location" class="form-control w-50" style="margin-left:auto; margin-right:auto;" />
                    <input type="submit" value="Submit Location" class="th-btn w-25 mt-2" />


                </form>
            </div>
            <div class="row">
                <div class="logo-row">
                    <img src="/images/logo.png" alt="logo" class="logo" />
                </div>
            </div>
        </div>
    </header>
</body>